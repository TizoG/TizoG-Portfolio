---
import { ArrowUpRight } from '@lucide/astro';
---

<header
    id="navbar"
    class="sticky top-0 z-50 w-full py-4 px-6 md:px-12 transition-all duration-300 bg-transparent border-transparent"
>
    <nav class="flex justify-between items-center w-full">
        <div class="flex items-center">
            <img
                src="/Gemini_Generated_Image_aidsv3aidsv3aids.png"
                alt="Logo"
                class="h-16 w-auto object-contain hover:scale-105 transition-transform duration-300"
            />
        </div>
        <div
            class="hidden md:flex text-sm items-center gap-8 text-[#94A3B8] font-semibold"
        >
            <a
                href="/"
                class="hover:text-[#06B6D4] transition-colors duration-300"
                >Inicio</a
            >
            <a
                href="#proyectos"
                class="hover:text-[#06B6D4] transition-colors duration-300"
                >Proyectos</a
            >
            <a
                href="#stack"
                class="hover:text-[#06B6D4] transition-colors duration-300"
                >Stack</a
            >
            <a
                href="#sobremi"
                class="hover:text-[#06B6D4] transition-colors duration-300"
                >Sobre m√≠</a
            >
            <span class="text-white/10">|</span>
            <a
                href="#contacto"
                class="group flex gap-2 items-center font-semibold py-2 px-4 border-2 border-[#06B6D4]/30 hover:border-[#06B6D4]/80 text-[#06B6D4] rounded-lg hover:bg-[#06B6D4]/10 transition-all duration-300"
            >
                Hablemos
                <ArrowUpRight
                    size={16}
                    class="transition-transform duration-300 group-hover:-translate-y-1 group-hover:translate-x-1"
                />
            </a>
        </div>
    </nav>
</header>

<script>
    const navbar = document.getElementById('navbar');

    const updateNavbar = () => {
        if (navbar) {
            if (window.scrollY > 10) {
                navbar.classList.add('backdrop-blur-md');
                navbar.classList.add('bg-white/5');
                navbar.classList.add('border-b');
                navbar.classList.add('border-white/5');
                navbar.classList.remove('bg-transparent');
                navbar.classList.remove('border-transparent');
                navbar.classList.remove('py-4');
                navbar.classList.add('py-2');
            } else {
                navbar.classList.remove('backdrop-blur-md');
                navbar.classList.remove('bg-white/5');
                navbar.classList.remove('border-b');
                navbar.classList.remove('border-white/5');
                navbar.classList.add('bg-transparent');
                navbar.classList.add('border-transparent');
                navbar.classList.add('py-4');
                navbar.classList.remove('py-2');
            }
        }
    };

    window.addEventListener('scroll', updateNavbar);
    // Initial check in case page is reloaded scrolled down
    updateNavbar();
</script>
