---
import { ChevronRightIcon, Github } from '@lucide/astro';
import proyectos from '../data/proyectos.json';
---

<section class="max-w-7xl mx-auto px-6 md:px-12 py-28">
    <div class="mb-20">
        <span
            class="text-[#06B6D4] font-jetbrains uppercase text-sm font-bold tracking-[0.3em] mb-4 block"
            >portfolio</span
        >
        <h2
            class="text-4xl md:text-5xl font-bold text-white mb-8 font-montserrat"
        >
            Código en Acción.
        </h2>
        <div class="w-24 h-2 bg-[#06B6D4] rounded-full"></div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {
            proyectos.map((proyecto) => (
                <div class="rounded-2xl bg-[#1E293B] overflow-hidden group hover:-translate-y-2 hover:shadow-2xl transition-transform duration-300 ease-in-out ">
                    <img
                        src={proyecto.imagen}
                        alt="Imagen del proyecto"
                        class="rounded-t-xl h-64 w-full object-cover saturate-0 scale-105 group-hover:scale-100 group-hover:saturate-100 transition-all duration-300 ease-in-out"
                    />
                    <div class="p-6">
                        <div class="flex items-center gap-3 flex-wrap mb-6">
                            {proyecto.stacks.map((s) => (
                                <span class="text-[#06B6D4] text-sm font-light border border-[#06B6D4]/30  bg-[#06B6D4]/20 w-fit uppercase font-jetbrains rounded-full px-3 py-1">
                                    {s}
                                </span>
                            ))}
                        </div>
                        <div>
                            <h3 class="text-white group-hover:text-[#06B6D4] text-2xl font-bold mb-4 font-montserrat">
                                {proyecto.titulo}
                            </h3>
                            <p class="text-sm leading-relaxed line-clamp-3">
                                {proyecto.descripcion}
                            </p>
                        </div>
                        <div class="mt-8 flex justify-between">
                            <a
                                href="/detalle-1"
                                class="flex gap-2 hover:cursor-pointer  group-hover:translate-x-2 transition-transform tracking-tighter duration-300 ease-in-out uppercase text-[#06B6D4] font-bold items-center text-sm "
                            >
                                ver detalles <ChevronRightIcon />
                            </a>
                            <a href={proyecto.github}>
                                <Github size={20} />
                            </a>
                        </div>
                    </div>
                </div>
            ))
        }
    </div>
</section>
